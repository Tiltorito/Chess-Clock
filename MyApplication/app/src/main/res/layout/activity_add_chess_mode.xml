<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chessclock.AddChessModeActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/secondsEditText"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Seconds per player"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/extraEditText"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Extra time per move"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/addEditButton"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"/>
</LinearLayout>
